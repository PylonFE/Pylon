{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es2018",
    "lib": ["es2018", "es2017", "es2015", "dom", "es7"],
    "module": "commonjs",
    "jsx": "react",
    "sourceMap": false,
    "strict": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true,
    "noImplicitReturns": true
  },
  "include": ["./src"],
  "exclude": ["node_modules"]
}
